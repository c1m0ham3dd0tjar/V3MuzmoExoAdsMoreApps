<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_custom_layout"
    android:gravity="center"
    android:orientation="vertical" >
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:background="@drawable/cover" />

    <TextView
        android:id="@+id/custom_Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#000"
        android:fontFamily="@font/malimedium"
        android:textSize="25dp"
        android:layout_marginBottom="15dp"
        android:textStyle="italic" />


    <LinearLayout
        android:id="@+id/custom_tool"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="5">


        <ImageView
            android:id="@+id/custom_pre"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:src="@drawable/pre" />

        <ImageView

            android:id="@+id/custom_play"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_stop_black_24dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"  />


        <ImageView
            android:id="@+id/custom_next"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:src="@drawable/next" />


    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/malimedium"
        android:id="@+id/text_privacy_2"
        android:gravity="center"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        />
    <!--ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/rate"/-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/malimedium"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="22dp"
        android:padding="5dp"
        android:id="@+id/custom_rate"
        android:layout_marginBottom="5dp"
        android:background="@drawable/cadre_rate"
        android:textColor="#000"/>
</LinearLayout>